<view class="commissioned-page">
    <form bindsubmit="submit">
        <!--姓名-->
        <view class="name-wrap">
            <view class="name">
                <view class="text">姓名</view>
                <input type="text" placeholder="请填写真实姓名" name="name"/>
            </view>
        </view>
        <!--手机好-->
        <view class="mobile-wrap">
            <view class="mobile">
                <view class="text">手机号</view>
                <input type="text" placeholder="请填写手机号" name="mobile"/>
            </view>
        </view>
        <!--区域-->
        <view class="area-wrap">
            <view class="area">
                <view class="text">区域</view>
                <input type="text" placeholder="请选择区域" name="area" disabled/>
                <view class="arrow"></view>
            </view>
        </view>
        <!--楼盘名称-->
        <view class="estate-name-wrap">
            <view class="estate-name">
                <view class="text">楼盘名称</view>
                <input type="text" placeholder="请填写楼盘名称" name="estateName"/>
            </view>
        </view>
        <!--面积-->
        <view class="size-wrap">
            <view class="size">
                <view class="text">面积 (㎡)</view>
                <input type="text" placeholder="请填写出租面积" name="size"/>
            </view>
        </view>
        <!--每月租金-->
        <view class="rent-wrap">
            <view class="rent">
                <view class="text">每月租金 (元)</view>
                <input type="text" placeholder="请填写每月租金" name="rent"/>
            </view>
        </view>
        <button  form-type="submit" disabled>确认并提交</button>
    </form>
</view>